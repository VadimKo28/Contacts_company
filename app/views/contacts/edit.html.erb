<h1>Редактирование</h1>
<%= form_with(model: @contact, url: @contact.new_record? ? contacts_path : contact_path(@contact), local: true) do |form| %>    
   
   <div>
    <p><%= form.label :"Имя" %></p>
    <p><%= form.text_field :name %></p>
  </div>

  <div>
    <p><%= form.label :"Телефон" %></p>
    <p><%= form.text_field :telephone %></p>
  </div>

  <div>
    <p><%= form.label :"Email" %></p>
    <p><%= form.text_field :email %></p>
  </div>

  <div class="field">
    <%= form.label :departament_id, "Отдел" %>
    <%= form.select :departament_id,
                    Departament.all.map { |dept| [dept.title, dept.id] }, {},
                    { required: true, include_blank: "Select Department" } %>
  </div>

  <div class="actions">
    <p><%= form.submit "Сохранить" %></p>
  </div>
<% end %>
