<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.label :"Ваше ФИО" %><p>
    <p><%= form.text_field :name, required: true %></p>
  </div>

  <div class="field">
    <p><%= form.label :"Название заявки" %></p>
    <p><%= form.text_field :title, required: true %></p>
  </div>

  <div class="field">
    <p><%= form.label :email %></p>
    <p><%= form.email_field :email, required: true %></p>
  </div>

  <div class="field">
    <p><%= form.label :"Текст заявки" %></p>
    <p><%= form.text_area :message, required: true %></p>
  </div>

  <div class="actions">
    <%= form.submit "Отправить"%>
  </div>
<% end %>
